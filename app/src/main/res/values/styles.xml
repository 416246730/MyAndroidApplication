<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IndexButtonStyle">
        <item  name="android:background">@color/darkBlue</item>
        <item  name="android:textColor">@color/white</item>
        <item name="android:layout_width">@dimen/index_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item  name="android:layout_marginBottom">@dimen/vertical_margin_or_padding_2</item>
        <item  name="android:textSize">@dimen/text_size_larger</item>
        <item name="android:onClick">indexButtonOnClick</item>
    </style>
</resources>
